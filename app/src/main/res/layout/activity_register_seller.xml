<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cu02.RegisterSellerActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/RegisterSellerLabel"
                android:textStyle="bold"
                android:textSize="50sp"
                android:fontFamily="@font/edwardianscript"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterName"/>

            <EditText
                android:id="@+id/ui_02_et_name"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/NameHint"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterLastName"/>

            <EditText
                android:id="@+id/ui_02_et_last_name"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/LastNameHint"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterMail"/>

            <EditText
                android:id="@+id/ui_02_et_email"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/EmailHint"
                android:inputType="textEmailAddress"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterPhone"/>

            <EditText
                android:id="@+id/ui_02_et_phone"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/PhoneNumberHint"
                android:inputType="number"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterPassword"/>

            <EditText
                android:id="@+id/ui_02_et_password"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/PasswordHint"
                android:inputType="textPassword"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterConfirmPassword"/>

            <EditText
                android:id="@+id/ui_02_et_confirm_password"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/ConfirmPasswordHint"
                android:inputType="textPassword"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/SelectState"/>

            <Spinner
                android:id="@+id/ui_02_spin_state"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/SelectCity"/>

            <Spinner
                android:id="@+id/ui_02_spin_city"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/SelectTypeSeller"/>

            <Spinner
                android:id="@+id/ui_02_spin_seller_type"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/SelectMarket"/>

            <Spinner
                android:id="@+id/ui_02_spin_market"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

