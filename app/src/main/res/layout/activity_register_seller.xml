            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RegisterLocalPlace"/>

                <EditText
                    android:id="@+id/ui_02_et_localplace"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/LocalDescriptionHint"
                    android:inputType="text"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/From"/>

                <Spinner
                    android:id="@+id/ui_02_spin_firstDay"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/To"/>

                <Spinner
                    android:id="@+id/ui_02_spin_lastDay"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FromTwo"/>

                <Spinner
                    android:id="@+id/ui_02_spin_firstHour"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ToTwo"/>

                <Spinner
                    android:id="@+id/ui_02_spin_lastHour"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SelectBank"/>

                <Spinner
                    android:id="@+id/ui_02_spin_bank"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RegisterAccountBank"/>

                <EditText
                    android:id="@+id/ui_02_et_account_number"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/AccountBankHint"
                    android:inputType="phone"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/ui_02_btn_select_image"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/customBlue"
                    android:text="@string/SelectImage"/>

                <Button
                    android:id="@+id/ui_02_btn_register_account"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/customBlue"
                    android:text="@string/RegisterAccount"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="#0000"
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:indeterminateTint="@color/customBlue"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </FrameLayout>

</ScrollView>