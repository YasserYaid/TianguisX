<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cu12.ModifySellerDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/ModifySellerLabel"
                android:textStyle="bold"
                android:textSize="50sp"
                android:fontFamily="@font/edwardianscript"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterName"/>

            <EditText
                android:id="@+id/ui_12_et_name"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/NameHint"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterLastName"/>

            <EditText
                android:id="@+id/ui_12_et_last_name"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/LastNameHint"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterPhone"/>

            <EditText
                android:id="@+id/ui_12_et_phone"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/PhoneNumberHint"
                android:inputType="number"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/SelectTypeSeller"/>

            <Spinner
                android:id="@+id/ui_12_spin_seller_type"
                android:background="@drawable/edittext_rounded"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RegisterLocalPlace"/>

                <EditText
                    android:id="@+id/ui_12_et_localplace"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/LocalDescriptionHint"
                    android:inputType="text"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/From"/>

                <Spinner
                    android:id="@+id/ui_12_spin_firstDay"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/To"/>

                <Spinner
                    android:id="@+id/ui_12_spin_lastDay"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FromTwo"/>

                <Spinner
                    android:id="@+id/ui_12_spin_firstHour"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ToTwo"/>

                <Spinner
                    android:id="@+id/ui_12_spin_lastHour"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SelectBank"/>

                <Spinner
                    android:id="@+id/ui_12_spin_bank"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RegisterAccountBank"/>

                <EditText
                    android:id="@+id/ui_12_et_account_number"
                    android:background="@drawable/edittext_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="@string/AccountBankHint"
                    android:inputType="phone"
                    android:textAlignment="center"/>
            </LinearLayout>

            <Button
                android:id="@+id/ui_02_btn_MODIFY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/customBlue"
                android:text="@string/ModifyAccount"/>

        </LinearLayout>

        <FrameLayout
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="#0000"
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:indeterminateTint="@color/customBlue"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </FrameLayout>

</ScrollView>