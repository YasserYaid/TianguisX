<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cu04.RegisterProductActivity">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:gravity="center"
           android:orientation="vertical">

           <ImageView
               android:layout_width="300dp"
               android:layout_height="200dp"
               android:src="@drawable/logo"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:text="@string/RegisterProductLabel"
               android:textStyle="bold"
               android:textSize="48sp"
               android:fontFamily="@font/edwardianscript"/>

           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:text="@string/RegisterProductName"/>

           <EditText
               android:id="@+id/ui_04_et_name"
               android:background="@drawable/edittext_rounded"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:hint="@string/NameHint"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:text="@string/RegisterProductBrand"/>

           <EditText
               android:id="@+id/ui_04_et_product_brand"
               android:background="@drawable/edittext_rounded"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:hint="@string/RegisterProductBrand"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:text="@string/RegisterProductCategory"/>

           <Spinner
               android:id="@+id/ui_04_spin_category"
               android:background="@drawable/edittext_rounded"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:text="@string/RegisterProductPrice"/>

           <EditText
               android:id="@+id/ui_04_et_price"
               android:background="@drawable/edittext_rounded"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:hint="@string/RegisterProductPrice"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:text="@string/RegisterAvailableQuantityProduct"/>

           <Spinner
               android:id="@+id/ui_04_spin_quantity"
               android:background="@drawable/edittext_rounded"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:text="@string/SelectProductState"/>

           <Spinner
               android:id="@+id/ui_04_spin_product_state"
               android:background="@drawable/edittext_rounded"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"/>

           <TextView
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:text="@string/RegisterDescription"/>

           <EditText
               android:id="@+id/ui_04_et_product_description"
               android:background="@drawable/edittext_rounded"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:hint="@string/RegisterDescription"
               android:textAlignment="center"/>

           <ImageView
               android:id="@+id/ui_04_iv_image"
               android:layout_width="300dp"
               android:layout_height="200dp"/>

           <LinearLayout
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="3dp"
               android:gravity="center">

               <Button
                   android:id="@+id/ui_04_btn_select_image"
                   android:layout_width="130dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="20dp"
                   android:backgroundTint="@color/customBlue"
                   android:text="@string/SelectImage"/>

               <Button
                   android:id="@+id/ui_04_btn_register_product"
                   android:layout_width="130dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="20dp"
                   android:backgroundTint="@color/customBlue"
                   android:text="@string/RegisterProductLabel"/>

           </LinearLayout>

       </LinearLayout>

       <FrameLayout
           android:visibility="gone"
           android:clickable="true"
           android:focusable="true"
           android:background="#0000"
           android:id="@+id/progress"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ProgressBar
               android:indeterminateTint="@color/customBlue"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

       </FrameLayout>

   </FrameLayout>

</ScrollView>